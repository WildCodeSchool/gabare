{% extends 'base.html.twig' %}

{% block title %}Associés index{% endblock %}

{% block body %}
    <div class="container-fluid p-5">
        <h1>Liste des associés</h1>
        <a href="{{ path('worker_new') }}" class="btn btn-primary mb-4">Ajouter</a>
        <table class="table table-striped">
            <thead class="thBackground">
            <tr>
                <th>Poste</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for worker in workers %}
                <tr>
                    <td>{{ worker.activity.name }}</td>
                    <td>{{ worker.firstName }}</td>
                    <td>{{ worker.lastName }}</td>
                    <td class="d-flex pt-3">
                        <a href="{{ path('worker_show', {'id': worker.id}) }}" class="btn btn-secondary mr-4">Aperçu <i
                                    class="fas fa-file-alt"></i></a>
                        <a href="{{ path('worker_edit', {'id': worker.id}) }}" class="btn btn-success mr-4">Éditer <i
                                    class="fas fa-pen"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun associé trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
