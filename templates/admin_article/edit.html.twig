{% extends 'base.html.twig' %}

{% block title %}Éditer un article{% endblock %}

{% block body %}

<div class="container-fluid p-5">
    <h1>Éditer un article</h1>
    <div class="col-lg-8 m-0 jumbotron">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.image) }}
        {{ form_row(form.date) }}
        {{ form_row(form.theme) }}
        <button class="btn btn-primary mt-2">Mettre à jour</button>
        {{ form_end(form) }}
    </div>
        <div class="row mt-5 ml-1">
    <a href="{{ path('article_index') }}" class="btn btn-outline-dark mr-5">Retour à la liste</a>
    {{ include('admin_article/_delete_form.html.twig') }}
        </div>
</div>

{% endblock %}
