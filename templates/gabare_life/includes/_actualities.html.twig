<h2 class="text-center m-0 m-md-5">Les actualités de la Gabare</h2>

<div class="row flex-wrap justify-content-center m-0">
    {% for actuality in actualities %}
    <div class="card-center m-2" style="width: 20rem;">
        <img class="card-img-top" src="{{ actuality.image }}" alt="Card image cap">
        <div class="card">
            <div class="card-body">
            <h4 class="card-title font-weight-bold">{{ actuality.title }}</h4>
            <h5 class="card-title">{{ actuality.theme.name }}</h5>
            <p class="card-text">{{ actuality.description|slice(0, 200) ~ '...' }}</p>
            <a href="#" class="btn btn-primary">Consulter</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>


