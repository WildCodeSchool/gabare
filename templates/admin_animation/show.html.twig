{% extends 'base.html.twig' %}

{% block title %}Animation{% endblock %}

{% block body %}
    <h1>Animation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animation.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ animation.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ animation.description }}</td>
            </tr>
            <tr>
                <th>Schedule</th>
                <td>{{ animation.schedule ? animation.schedule|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>HourStart</th>
                <td>{{ animation.hourStart ? animation.hourStart|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>HourEnd</th>
                <td>{{ animation.hourEnd ? animation.hourEnd|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ animation.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('animation_index') }}">back to list</a>

    <a href="{{ path('animation_edit', {'id': animation.id}) }}">edit</a>

    {{ include('admin_animation/_delete_form.html.twig') }}
{% endblock %}
