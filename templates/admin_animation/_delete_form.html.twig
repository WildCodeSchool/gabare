<form method="post" action="{{ path('animation_delete', {'id': animation.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette animation ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ animation.id) }}">
    <button class="btn btn-danger">Supprimer<i class="fas fa-trash-alt ml-1"></i></button>
</form>
